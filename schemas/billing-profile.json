{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "last4": {
      "type": "string",
      "pattern": "^[0-9]{4}$"
    },
    "name": {
      "type": "string"
    },
    "exp_month": {
      "type": "integer",
      "minimum": 1,
      "maximum": 12
    },
    "exp_year": {
      "type": "integer",
      "minimum": 2015,
      "maximum": 2035
    }
  },
  "required": [
    "last4",
    "name",
    "exp_month",
    "exp_year"
  ]
}
